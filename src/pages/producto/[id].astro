---
import Layout from '../../layouts/Layout.astro';
import { getToolById, getCreativeTools } from '../../lib/firestore';
import { Clock, Monitor, Cpu, ShoppingCart, Languages, ShieldCheck, ShoppingBasket, Calendar } from 'lucide-astro';

// Generar rutas est√°ticas para todos los productos desde Firestore
export async function getStaticPaths() {
  try {
    const firestoreProducts = await getCreativeTools();
    return firestoreProducts.map(product => ({
      params: { id: product.id }
    }));
  } catch (error) {
    console.error("Error obteniendo productos de Firestore:", error);
    return [];
  }
}

// Obtener el ID del producto desde la URL
const { id } = Astro.params;

// Obtener producto desde Firestore
const tool = await getToolById(id || '');

// Si no se encuentra el producto, mostrar 404
if (!tool) {
  return Astro.redirect('/404');
}

// Funci√≥n para formatear fecha
const formatDate = (date?: Date) => {
  if (!date) return 'Fecha no disponible';
  try {
    return date.toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
  } catch {
    return 'Fecha no disponible';
  }
};

// Valores por defecto si faltan en Firestore
const status = tool.status || '100% Funcional';
const tags = tool.tags || ['Dise√±o', 'Herramienta', 'Profesional'];
const videoUrl = tool.videoUrl || 'https://www.youtube.com/embed/k_TfGHam5r0?si=JRsVxI4Y2QR52Msp';
const lastUpdated = tool.lastUpdated;
---

<Layout title={`${tool.name} - KimYuna Store`} currentPath={`/producto/${id}`}>
  <div class="bg-black text-white min-h-screen">
    <!-- Main Tool Layout -->
    <div class="px-4 sm:px-6 lg:px-12 py-8 lg:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 max-w-7xl mx-auto">
        <!-- Left Side - Tool Video -->
        <div class="w-full">
          <div class="relative w-full aspect-video bg-neutral-900 rounded-2xl overflow-hidden border border-neutral-800">
            <iframe 
              width="100%" 
              height="100%" 
              src={videoUrl}
              title="YouTube video player" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              class="w-full h-full"
            ></iframe>
          </div>
        </div>

        <!-- Right Side - Tool Details -->
        <div class="flex flex-col justify-center space-y-8">
          <!-- Tool Info -->
          <div class="space-y-6">
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <img
                  src={`/${tool.ico}.svg`}
                  alt={tool.name}
                  width="50"
                  height="50"
                  class="w-12 h-12"
                  transition:name={`product-icon-${id}`}
                  transition:animate="morph"
                />
                <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
                  {tool.name}
                </h1>
              </div>

              <!-- Opciones de Compra - Tabs Style -->
              <div class="space-y-4">
                <!-- Tabs de opciones -->
                <div class="flex gap-2 p-1 bg-neutral-800/50 rounded-lg border border-neutral-700">
                  <button 
                    data-option="files"
                    class="option-tab flex-1 px-4 py-2.5 text-sm font-medium rounded-md transition-all duration-200 bg-blue-600 text-white"
                  >
                    Archivos + Manual
                  </button>
                  <button 
                    data-option="remote"
                    class="option-tab flex-1 px-4 py-2.5 text-sm font-medium rounded-md transition-all duration-200 text-neutral-400 hover:text-white"
                  >
                    Instalaci√≥n Remota
                  </button>
                </div>

                <!-- Precio din√°mico -->
                <div class="flex items-baseline gap-2">
                  <span class="text-4xl font-bold text-white" id="priceDisplay">${tool.price.toFixed(2)}</span>
                  <span class="text-lg text-neutral-400">USD</span>
                </div>

                <!-- Descripci√≥n de la opci√≥n seleccionada -->
                <div id="optionDescription" class="text-sm text-neutral-400">
                  Archivos completos de instalaci√≥n con instrucciones paso a paso. Conservas los instaladores para uso futuro.
                </div>
              </div>
            </div>

            <hr class="border-neutral-700" />
          </div>

          <!-- Purchase Section -->
          <div class="space-y-4">
            <a 
              href={tool.linkPayment || '#'} 
              target="_blank" 
              rel="noopener noreferrer"
              class="block w-full"
              id="buyButton"
            >
              <button
                id="mainButton"
                class="w-full h-14 text-lg font-semibold bg-blue-600 hover:bg-blue-700 text-white border-0 rounded-full transition-all duration-200 hover:scale-[1.02] flex items-center justify-center gap-2"
              >
                <ShoppingCart class="h-5 w-5" id="buttonIcon" />
                <Calendar class="h-5 w-5 hidden" id="calendarIcon" />
                <Clock class="h-5 w-5 hidden" id="clockIcon" />
                <span id="buttonText">Comprar Ahora</span>
              </button>
            </a>
            <div class="text-center text-xs text-neutral-400" id="disclaimerText">
              No ofrecemos devoluciones, as√≠ que aseg√∫rate de revisar bien los requisitos.
            </div>
          </div>
        </div>
      </div>

      <!-- System Requirements & Features -->
      <div class="mt-16 lg:mt-24 max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- System Requirements -->
          <div class="bg-neutral-800/50 border border-neutral-700 rounded-lg p-6">
            <div class="mb-6">
              <h3 class="text-white font-semibold text-xl flex items-center gap-3">
                <Monitor class="h-6 w-6" />
                Informaci√≥n Adicional
              </h3>
            </div>
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <Monitor class="h-4 w-4" />
                    Sistema Operativo
                  </p>
                  <p class="text-white font-medium">
                    macOS 14 hasta 26.0
                  </p>
                </div>

                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <Languages class="h-4 w-4" />
                    Idioma del Software
                  </p>
                  <p class="text-white font-medium">
                    Ingl√©s / US
                  </p>
                </div>

                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <Cpu class="h-4 w-4" />
                    RAM M√≠nima
                  </p>
                  <p class="text-white font-medium">
                    8 GB
                  </p>
                </div>

                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <ShieldCheck class="h-4 w-4" />
                    Fiabilidad
                  </p>
                  <p class="text-white font-medium">
                    {status}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Features & Info -->
          <div class="bg-neutral-800/50 border border-neutral-700 rounded-lg p-6">
            <div class="mb-6">
              <h3 class="text-white capitalize font-semibold text-xl flex items-center gap-3">
                <ShoppingBasket class="h-6 w-6" />
                Opciones de Instalaci√≥n
              </h3>
            </div>
            <div class="space-y-6">
              <!-- Informaci√≥n General -->
              <div class="pt-4 border-t border-neutral-700">
                <h5 class="text-white font-medium mb-2">Informaci√≥n General:</h5>
                <ul class="list-disc list-inside text-neutral-400 font-medium space-y-1 text-sm">
                  <li>Activado de por vida (√∫nico pago)</li>
                  <li>Compatible con chips M1, M2, M3 y M4</li>
                  <li>Soporte por correo electr√≥nico incluido</li>
                </ul>
              </div>
              
              <div class="space-y-2">
                <div class="flex flex-wrap gap-2">
                  {tags.map((tag: string) => (
                    <span class="bg-neutral-700 text-white px-3 py-1 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Nota sobre futuras caracter√≠sticas -->
        <!-- <div class="mt-8 text-center text-neutral-500 text-sm">
          <p>üí° Pr√≥ximamente: Sistema de rese√±as y cupones de descuento para compradores</p>
        </div> -->
      </div>
    </div>
  </div>
</Layout>

<script>
  function initProductPage() {
    // Configuraci√≥n de opciones
    const options = {
      files: {
        price: parseFloat(document.querySelector('h1')?.textContent || '40'), // Obtener precio del producto
        description: 'Archivos completos de instalaci√≥n con instrucciones paso a paso. Conservas los instaladores para uso futuro.',
        buttonText: 'Comprar Ahora',
        buttonIcon: 'cart',
        disclaimer: 'No ofrecemos devoluciones, as√≠ que aseg√∫rate de revisar bien los requisitos.',
        linkType: 'payment'
      },
      remote: {
        price: 15.99,
        description: 'Instalaci√≥n completa mediante asistencia remota. Sin entrega de archivos. Instalaci√≥n r√°pida con acompa√±amiento durante todo el proceso.',
        buttonText: 'Reservar Instalaci√≥n',
        buttonIcon: 'calendar',
        disclaimer: 'Ser√°s redirigido al formulario de contacto para coordinar la instalaci√≥n.',
        linkType: 'contact'
      }
    };

    // Elementos del DOM
    const optionTabs = document.querySelectorAll('.option-tab');
    const buyButton = document.getElementById('buyButton') as HTMLAnchorElement;
    const mainButton = document.getElementById('mainButton') as HTMLButtonElement;
    const buttonText = document.getElementById('buttonText');
    const disclaimerText = document.getElementById('disclaimerText');
    const cartIcon = document.getElementById('buttonIcon');
    const calendarIcon = document.getElementById('calendarIcon');
    const clockIcon = document.getElementById('clockIcon');
    const priceDisplay = document.getElementById('priceDisplay');
    const optionDescription = document.getElementById('optionDescription');

    let currentOption = 'files';

    // Guardar link original de pago
    const hasPaymentLink = buyButton && buyButton.href && buyButton.href !== '#' && !buyButton.href.endsWith('#');
    if (hasPaymentLink && buyButton && !buyButton.dataset.originalHref) {
      buyButton.dataset.originalHref = buyButton.href;
    }

    // Obtener precio real del producto desde el data attribute o calcular
    const realPrice = parseFloat(priceDisplay?.textContent?.replace('$', '') || '40');
    options.files.price = realPrice;

    // Funci√≥n para actualizar UI
    function updateUI(option: 'files' | 'remote') {
      const config = options[option];
      
      // Actualizar tabs
      optionTabs.forEach(tab => {
        const tabOption = (tab as HTMLButtonElement).dataset.option;
        if (tabOption === option) {
          tab.classList.add('bg-blue-600', 'text-white');
          tab.classList.remove('text-neutral-400', 'hover:text-white');
        } else {
          tab.classList.remove('bg-blue-600', 'text-white');
          tab.classList.add('text-neutral-400', 'hover:text-white');
        }
      });

      // Actualizar precio
      if (priceDisplay) {
        priceDisplay.textContent = `$${config.price.toFixed(2)}`;
      }

      // Actualizar descripci√≥n
      if (optionDescription) {
        optionDescription.textContent = config.description;
      }

      // Actualizar bot√≥n
      if (buttonText) {
        buttonText.textContent = config.buttonText;
      }

      // Actualizar disclaimer
      if (disclaimerText) {
        disclaimerText.textContent = config.disclaimer;
      }

      // Actualizar iconos
      if (cartIcon && calendarIcon && clockIcon) {
        cartIcon.classList.add('hidden');
        calendarIcon.classList.add('hidden');
        clockIcon.classList.add('hidden');
        
        if (config.buttonIcon === 'cart') {
          cartIcon.classList.remove('hidden');
        } else if (config.buttonIcon === 'calendar') {
          calendarIcon.classList.remove('hidden');
        } else {
          clockIcon.classList.remove('hidden');
        }
      }

      // Actualizar estado del bot√≥n seg√∫n disponibilidad
      if (mainButton && buyButton) {
        // Si es "Archivos + Manual" Y no hay link de pago ‚Üí Deshabilitar
        if (option === 'files' && !hasPaymentLink) {
          mainButton.disabled = true;
          mainButton.classList.remove('bg-blue-600', 'hover:bg-blue-700', 'hover:scale-[1.02]');
          mainButton.classList.add('bg-neutral-600', 'text-neutral-300', 'cursor-not-allowed');
          if (buttonText) buttonText.textContent = 'Pr√≥ximamente';
          if (clockIcon) clockIcon.classList.remove('hidden');
          if (cartIcon) cartIcon.classList.add('hidden');
          if (disclaimerText) {
            disclaimerText.textContent = 'Estamos migrando este producto. Pronto estar√° disponible.';
          }
          buyButton.style.pointerEvents = 'none';
          return; // Salir temprano
        } else {
          // Habilitar bot√≥n
          mainButton.disabled = false;
          mainButton.classList.add('bg-blue-600', 'hover:bg-blue-700', 'hover:scale-[1.02]');
          mainButton.classList.remove('bg-neutral-600', 'text-neutral-300', 'cursor-not-allowed');
          buyButton.style.pointerEvents = 'auto';
        }
      }

      // Actualizar link
      if (buyButton) {
        if (config.linkType === 'contact') {
          // Instalaci√≥n Remota ‚Üí Siempre disponible
          const productName = document.querySelector('h1')?.textContent || 'Producto';
          const subject = encodeURIComponent(`Instalaci√≥n Remota - ${productName}`);
          const category = encodeURIComponent('soporte');
          const message = encodeURIComponent(`Hola, estoy interesado en el servicio de Instalaci√≥n Remota para ${productName}.\n\nPor favor, ind√≠quenme los pr√≥ximos pasos para agendar la instalaci√≥n.\n\nGracias.`);
          
          buyButton.href = `/contacto?subject=${subject}&category=${category}&message=${message}`;
          buyButton.target = '_self';
        } else if (hasPaymentLink) {
          // Archivos + Manual con link de pago disponible
          buyButton.href = buyButton.dataset.originalHref || '#';
          buyButton.target = '_blank';
        }
      }
    }

    // Event listeners para tabs
    optionTabs.forEach(tab => {
      tab.addEventListener('click', () => {
        const option = (tab as HTMLButtonElement).dataset.option as 'files' | 'remote';
        currentOption = option;
        updateUI(option);
      });
    });

    // Inicializar con la opci√≥n por defecto
    updateUI('files');
  }

  // Ejecutar al cargar la p√°gina
  initProductPage();

  // Tambi√©n ejecutar despu√©s de navegaciones con View Transitions
  document.addEventListener('astro:page-load', initProductPage);
</script>
