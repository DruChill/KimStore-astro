          </div>
        </div>

        <!-- Right Side - Tool Details -->
        <div class="flex flex-col justify-center space-y-8">
          <!-- Tool Info -->
          <div class="space-y-6">
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <img
                  src={`/${tool.ico}.svg`}
                  alt={tool.name}
                  width="50"
                  height="50"
                  class="w-12 h-12"
