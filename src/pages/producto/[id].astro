  <div class="bg-black text-white min-h-screen">
    <!-- Main Tool Layout -->
    <div class="px-4 sm:px-6 lg:px-12 py-8 lg:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 max-w-7xl mx-auto">
        <!-- Left Side - Tool Video -->
        <div class="w-full">
