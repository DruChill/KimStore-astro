---
import Layout from '../../layouts/Layout.astro';
import { getToolById, getCreativeTools } from '../../lib/firestore';
import { Clock, Monitor, Cpu, ShoppingCart, Languages, ShieldCheck, ShoppingBasket } from 'lucide-astro';

// Generar rutas est√°ticas para todos los productos desde Firestore
export async function getStaticPaths() {
  try {
    const firestoreProducts = await getCreativeTools();
    return firestoreProducts.map(product => ({
      params: { id: product.id }
    }));
  } catch (error) {
    console.error("Error obteniendo productos de Firestore:", error);
    return [];
  }
}

// Obtener el ID del producto desde la URL
const { id } = Astro.params;

// Obtener producto desde Firestore
const tool = await getToolById(id || '');

// Si no se encuentra el producto, mostrar 404
if (!tool) {
  return Astro.redirect('/404');
}

// Funci√≥n para formatear fecha
const formatDate = (date?: Date) => {
  if (!date) return 'Fecha no disponible';
  try {
    return date.toLocaleDateString('es-ES', {
      year: 'numeric',
      month: 'short',
      day: 'numeric'
    });
  } catch {
    return 'Fecha no disponible';
  }
};

// Valores por defecto si faltan en Firestore
const status = tool.status || '100% Funcional';
const tags = tool.tags || ['Dise√±o', 'Herramienta', 'Profesional'];
const videoUrl = tool.videoUrl || 'https://www.youtube.com/embed/k_TfGHam5r0?si=JRsVxI4Y2QR52Msp';
const lastUpdated = tool.lastUpdated;
---

<Layout title={`${tool.name} - KimYuna Store`} currentPath={`/producto/${id}`}>
  <div class="bg-black text-white min-h-screen">
    <!-- Main Tool Layout -->
    <div class="px-4 sm:px-6 lg:px-12 py-8 lg:py-16">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-16 max-w-7xl mx-auto">
        <!-- Left Side - Tool Video -->
        <div class="w-full">
          <div class="relative w-full aspect-video bg-neutral-900 rounded-2xl overflow-hidden border border-neutral-800">
            <iframe 
              width="100%" 
              height="100%" 
              src={videoUrl}
              title="YouTube video player" 
              allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share"
              class="w-full h-full"
            ></iframe>
          </div>
        </div>

        <!-- Right Side - Tool Details -->
        <div class="flex flex-col justify-center space-y-8">
          <!-- Tool Info -->
          <div class="space-y-6">
            <div class="space-y-4">
              <div class="flex items-center gap-3">
                <img
                  src={`/${tool.ico}.svg`}
                  alt={tool.name}
                  width="50"
                  height="50"
                  class="w-12 h-12"
                  transition:name={`product-icon-${id}`}
                  transition:animate="morph"
                />
                <h1 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-white leading-tight">
                  {tool.name}
                </h1>
              </div>

              <div class="flex items-center gap-2 text-neutral-400 text-sm">
                <Clock class="h-4 w-4" />
                <span>{formatDate(lastUpdated)}</span>
              </div>

              <!-- Opciones de Compra -->
              <div class="space-y-3">
                <h3 class="text-sm font-semibold text-neutral-400 uppercase tracking-wide">Selecciona una opci√≥n</h3>
                
                <!-- Opci√≥n 1: Instalaci√≥n Remota -->
                <label class="block border border-neutral-700 rounded-lg p-4 hover:border-blue-500 transition-colors cursor-pointer has-[:checked]:border-blue-500 has-[:checked]:bg-blue-500/5">
                  <div class="flex items-start gap-3">
                    <input 
                      type="radio" 
                      name="installOption" 
                      value="remote"
                      class="mt-1 w-4 h-4 text-blue-600 bg-neutral-800 border-neutral-600 focus:ring-blue-500"
                    />
                    <div class="flex-1">
                      <div class="flex items-start justify-between mb-2">
                        <div>
                          <h4 class="text-white font-semibold">Instalaci√≥n Remota</h4>
                          <p class="text-2xl font-bold text-blue-400 mt-1">$25 USD</p>
                        </div>
                      </div>
                      <p class="text-sm text-neutral-400 mb-2">
                        Instalaci√≥n completa mediante asistencia remota. Sin entrega de archivos.
                      </p>
                      <div class="space-y-1.5 mb-2">
                        <p class="text-xs font-semibold text-green-400">‚úì Ventajas:</p>
                        <ul class="text-xs text-neutral-400 space-y-1 ml-4">
                          <li>‚Ä¢ Instalaci√≥n r√°pida y sin complicaciones</li>
                          <li>‚Ä¢ Acompa√±amiento durante todo el proceso</li>
                        </ul>
                      </div>
                      <p class="text-xs text-yellow-400/80">‚ö† Requiere: Conexi√≥n estable y disponibilidad del cliente</p>
                    </div>
                  </div>
                </label>

                <!-- Opci√≥n 2: Archivos + Manual -->
                <label class="block border border-neutral-700 rounded-lg p-4 hover:border-blue-500 transition-colors cursor-pointer has-[:checked]:border-blue-500 has-[:checked]:bg-blue-500/5">
                  <div class="flex items-start gap-3">
                    <input 
                      type="radio" 
                      name="installOption" 
                      value="files"
                      checked
                      class="mt-1 w-4 h-4 text-blue-600 bg-neutral-800 border-neutral-600 focus:ring-blue-500"
                    />
                    <div class="flex-1">
                      <div class="flex items-start justify-between mb-2">
                        <div>
                          <h4 class="text-white font-semibold">Archivos + Manual</h4>
                          <p class="text-2xl font-bold text-blue-400 mt-1">${tool.price.toFixed(2)} USD</p>
                        </div>
                      </div>
                      <p class="text-sm text-neutral-400 mb-2">
                        Archivos completos de instalaci√≥n con instrucciones paso a paso.
                      </p>
                      <div class="space-y-1.5 mb-2">
                        <p class="text-xs font-semibold text-green-400">‚úì Ventajas:</p>
                        <ul class="text-xs text-neutral-400 space-y-1 ml-4">
                          <li>‚Ä¢ Conservas los instaladores para uso futuro</li>
                          <li>‚Ä¢ Flexibilidad para instalar cuando quieras</li>
                        </ul>
                      </div>
                      <p class="text-xs text-yellow-400/80">‚ö† Nota: Instalaci√≥n bajo tu responsabilidad</p>
                    </div>
                  </div>
                </label>
              </div>
            </div>

            <hr class="border-neutral-700" />
          </div>

          <!-- Purchase Section -->
          <div class="space-y-4">
            {tool.linkPayment ? (
              <>
                <a 
                  href={tool.linkPayment} 
                  target="_blank" 
                  rel="noopener noreferrer"
                  class="block w-full"
                  id="buyButton"
                >
                  <button
                    class="w-full h-14 text-lg font-semibold bg-blue-600 hover:bg-blue-700 text-white border-0 rounded-full transition-all duration-200 hover:scale-[1.02] flex items-center justify-center gap-2"
                  >
                    <ShoppingCart class="h-5 w-5" />
                    <span id="buttonText">Comprar Ahora</span>
                  </button>
                </a>
                <div class="text-center text-xs text-neutral-400" id="disclaimerText">
                  No ofrecemos devoluciones, as√≠ que aseg√∫rate de revisar bien los requisitos.
                </div>
              </>
            ) : (
              <>
                <button
                  disabled
                  class="w-full h-14 text-lg font-semibold bg-neutral-600 text-neutral-300 border-0 rounded-full cursor-not-allowed flex items-center justify-center gap-2"
                >
                  <Clock class="h-5 w-5" />
                  Pr√≥ximamente
                </button>
                <div class="text-center text-xs text-neutral-400">
                  Estamos migrando este producto. Pronto estar√° disponible.
                </div>
              </>
            )}
          </div>
        </div>
      </div>

      <!-- System Requirements & Features -->
      <div class="mt-16 lg:mt-24 max-w-7xl mx-auto">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
          <!-- System Requirements -->
          <div class="bg-neutral-800/50 border border-neutral-700 rounded-lg p-6">
            <div class="mb-6">
              <h3 class="text-white font-semibold text-xl flex items-center gap-3">
                <Monitor class="h-6 w-6" />
                Informaci√≥n Adicional
              </h3>
            </div>
            <div class="space-y-4">
              <div class="grid grid-cols-2 gap-4">
                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <Monitor class="h-4 w-4" />
                    Sistema Operativo
                  </p>
                  <p class="text-white font-medium">
                    macOS 14 hasta 26.0
                  </p>
                </div>

                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <Languages class="h-4 w-4" />
                    Idioma del Software
                  </p>
                  <p class="text-white font-medium">
                    Ingl√©s / US
                  </p>
                </div>

                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <Cpu class="h-4 w-4" />
                    RAM M√≠nima
                  </p>
                  <p class="text-white font-medium">
                    8 GB
                  </p>
                </div>

                <div class="space-y-2">
                  <p class="text-neutral-400 text-sm flex items-center gap-2">
                    <ShieldCheck class="h-4 w-4" />
                    Fiabilidad
                  </p>
                  <p class="text-white font-medium">
                    {status}
                  </p>
                </div>
              </div>
            </div>
          </div>

          <!-- Features & Info -->
          <div class="bg-neutral-800/50 border border-neutral-700 rounded-lg p-6">
            <div class="mb-6">
              <h3 class="text-white capitalize font-semibold text-xl flex items-center gap-3">
                <ShoppingBasket class="h-6 w-6" />
                Opciones de Instalaci√≥n
              </h3>
            </div>
            <div class="space-y-6">
              <!-- Informaci√≥n General -->
              <div class="pt-4 border-t border-neutral-700">
                <h5 class="text-white font-medium mb-2">Informaci√≥n General:</h5>
                <ul class="list-disc list-inside text-neutral-400 font-medium space-y-1 text-sm">
                  <li>Activado de por vida (√∫nico pago)</li>
                  <li>Compatible con chips M1, M2, M3 y M4</li>
                  <li>Soporte por correo electr√≥nico incluido</li>
                </ul>
              </div>
              
              <div class="space-y-2">
                <div class="flex flex-wrap gap-2">
                  {tags.map((tag: string) => (
                    <span class="bg-neutral-700 text-white px-3 py-1 rounded-full text-sm">
                      {tag}
                    </span>
                  ))}
                </div>
              </div>
            </div>
          </div>
        </div>
        
        <!-- Nota sobre futuras caracter√≠sticas -->
        <!-- <div class="mt-8 text-center text-neutral-500 text-sm">
          <p>üí° Pr√≥ximamente: Sistema de rese√±as y cupones de descuento para compradores</p>
        </div> -->
      </div>
    </div>
  </div>
</Layout>

<script>
  // Manejar cambio de opciones
  const radioButtons = document.querySelectorAll('input[name="installOption"]');
  const buyButton = document.getElementById('buyButton') as HTMLAnchorElement;
  const buttonText = document.getElementById('buttonText');
  const disclaimerText = document.getElementById('disclaimerText');

  if (radioButtons && buyButton && buttonText && disclaimerText) {
    radioButtons.forEach((radio) => {
      radio.addEventListener('change', (e) => {
        const target = e.target as HTMLInputElement;
        
        if (target.value === 'remote') {
          // Opci√≥n 1: Instalaci√≥n Remota - Ir a contacto
          const productName = document.querySelector('h1')?.textContent || 'Producto';
          const subject = encodeURIComponent(`Instalaci√≥n Remota - ${productName}`);
          const category = encodeURIComponent('soporte');
          const message = encodeURIComponent(`Hola, estoy interesado en el servicio de Instalaci√≥n Remota para ${productName}.\n\nPor favor, ind√≠quenme los pr√≥ximos pasos para agendar la instalaci√≥n.\n\nGracias.`);
          
          buyButton.href = `/contacto?subject=${subject}&category=${category}&message=${message}`;
          buyButton.target = '_self';
          buttonText.textContent = 'Reservar Instalaci√≥n';
          disclaimerText.textContent = 'Ser√°s redirigido al formulario de contacto para coordinar la instalaci√≥n.';
        } else {
          // Opci√≥n 2: Archivos + Manual - Comprar
          const paymentLink = buyButton.dataset.originalHref || buyButton.href;
          buyButton.href = paymentLink;
          buyButton.target = '_blank';
          buttonText.textContent = 'Comprar Ahora';
          disclaimerText.textContent = 'No ofrecemos devoluciones, as√≠ que aseg√∫rate de revisar bien los requisitos.';
        }
      });
    });

    // Guardar el link original de pago
    if (buyButton.href && !buyButton.dataset.originalHref) {
      buyButton.dataset.originalHref = buyButton.href;
    }
  }
</script>
